{
    "name": "vnibb",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "dev:web": "pnpm --filter web dev",
        "dev:api": "pnpm --filter api dev",
        "build:web": "pnpm --filter web build",
        "build:api": "pnpm --filter api build"
    },
    "devDependencies": {
        "turbo": "^2.0.0"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "pnpm@8.15.0"
}